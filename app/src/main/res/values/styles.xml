<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dark_black</item>
        <item name="colorAccent">@color/yellow</item>

        <item name="android:textViewStyle">@style/mavenTextViewStyle</item>
        <item name="android:buttonStyle">@style/mavenButtonStyle</item>
    </style>

    <style name="mavenTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/maven_pro</item>
    </style>

    <style name="mavenButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/maven_pro</item>
    </style>

</resources>